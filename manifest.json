{
  "manifest_version": 3,
  "name": "LinkedIn Professional Assistant",
  "version": "2.0.3",
  "description": "Professional networking assistant for LinkedIn profiles",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedinscrap-e4dpdhcuc7fgd7fk.eastasia-01.azurewebsites.net/*"
  ],
  "icons": {
    "48": "icons/icon64.png",
    "128": "icons/icon64.png"
  },
  "content_scripts": [{
    "matches": ["https://www.linkedin.com/in/*"],
    "js": ["content.js"],
    "run_at": "document_idle",
    "all_frames": false
  }],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Assistant",
    "default_icon": {
      "48": "icons/icon64.png",
      "128": "icons/icon64.png"
    }
  },
  "commands": {
    "extract-profile": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Extract LinkedIn profile"
    }
  },
  "web_accessible_resources": [{
    "resources": ["content.js"],
    "matches": ["https://www.linkedin.com/*"]
  }]
}
